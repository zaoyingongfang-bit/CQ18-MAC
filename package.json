{
  "name": "cq18-mac",
  "version": "2.0.0",
  "description": "造音工坊专业声卡调试工具 - macOS 版",
  "main": "main.js",
  "author": "造音工坊",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -m"
  },
  "build": {
    "appId": "com.zaoyinfang.soundcard-tool.mac",
    "productName": "造音工坊声卡调试工具",
    "directories": {
      "output": "dist"
    },
    "publish": null,
    "afterPack": "./afterPack.js",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "identity": null,
      "signIgnore": [
        ".*"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "asar": true
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
